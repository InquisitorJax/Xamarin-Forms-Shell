<?xml version="1.0" encoding="utf-8" ?>
<pages:MvvmContentPage x:Class="XamarinFormsShell.Pages.HomePage"
                       xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:converters="clr-namespace:XamarinFormsShell.Converters"
                       xmlns:pages="clr-namespace:XamarinFormsShell.Pages"
                       xmlns:views="clr-namespace:XamarinFormsShell.Views">
	<Shell.TitleView>
		<views:CustomNavigationBar />
	</Shell.TitleView>


	<StackLayout Margin="10,0,10,20">
		<StackLayout.Resources>
			<converters:SvgToImageSourceConverter x:Key="svg" />
		</StackLayout.Resources>
		<!--  Place new controls here  -->
		<Label HorizontalOptions="Center"
		       Text="Welcome to Xamarin.Forms!"
		       VerticalOptions="CenterAndExpand" />

		<Image BackgroundColor="Black"
		       HeightRequest="100"
		       HorizontalOptions="Center"
		       Source="{Binding HomeIconName, Converter={StaticResource svg}, ConverterParameter=30}"
		       WidthRequest="100" />

		<Button BackgroundColor="#FF5500"
		        Command="{Binding NavigateToItemPageCommand}"
		        CornerRadius="25"
		        Text="Navigate to Item Page"
		        TextColor="White" />

	</StackLayout>

</pages:MvvmContentPage>
